<PluginUserControl x:Class="PlayniteSounds.Views.Layouts.GameViewControls.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlayniteSounds.Views.Layouts.GameViewControls"
             xmlns:model="clr-namespace:PlayniteSounds.Views.Models.GameViewControls"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=model:PlayerControlModel}">
    <MediaElement Name="Player"
                  Source="{Binding MusicFilePath}"
                  LoadedBehavior="Play"
                  UnloadedBehavior="Manual"
                  MediaOpened="Start"
                  MediaEnded="OnEnd"/>
</PluginUserControl>